  "devDependencies": {
    "browserify": "^12.0.1",
    "chai": "^3.4.1",
    "coveralls": "^2.11.4",
    "istanbul": "^0.4.0",
    "jshint": "^2.8.0",
    "mocha": "^2.3.3",
    "sinon": "^1.17.2"
  }
