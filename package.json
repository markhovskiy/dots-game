{
  "name": "dots-game",
  "version": "0.0.1",
  "description": "html5 version of a classic paper-based game",
  "main": "src/app.js",
  "scripts": {
    "lint": "eslint ./src/",
    "test": "echo 'tests are currently disabled'",
    "clean": "rm -rf ./dist/*",
    "prebuild": "yarn run clean && yarn run lint && yarn run test",
    "prebuild:dev": "yarn prebuild",
    "prebuild:prod": "yarn prebuild",
    "run:dev": "export NODE_ENV=development PUBLIC_PATH=/ && webpack-dev-server",
    "run:dev-dashboard": "export NODE_ENV=development PUBLIC_PATH=/ && webpack-dashboard webpack-dev-server",
    "build:dev": "export NODE_ENV=development PUBLIC_PATH=/ && webpack --progress --bail",
    "build:prod": "export NODE_ENV=production PUBLIC_PATH=https://minimalistic-games.github.io/dots-game/ && webpack --progress --bail",
    "deploy": "gh-pages -d ./dist/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/minimalistic-games/dots-game.git"
  },
  "author": "Oleksii Markhovskyi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/minimalistic-games/dots-game/issues"
  },
  "homepage": "https://github.com/minimalistic-games/dots-game",
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-loader": "7.1.2",
    "babel-polyfill": "6.26.0",
    "babel-preset-env": "1.6.1",
    "chai": "4.1.2",
    "copy-webpack-plugin": "4.3.1",
    "css-loader": "0.28.8",
    "eslint": "4.15.0",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-import-resolver-webpack": "0.8.4",
    "eslint-loader": "1.9.0",
    "eslint-plugin-import": "2.8.0",
    "extract-text-webpack-plugin": "3.0.2",
    "gh-pages": "1.1.0",
    "html-webpack-plugin": "2.30.1",
    "mocha": "3.4.2",
    "sinon": "4.1.6",
    "style-loader": "0.19.1",
    "webpack": "3.10.0",
    "webpack-dashboard": "1.0.2",
    "webpack-dev-server": "2.11.0"
  },
  "dependencies": {
    "hidpi-canvas": "1.0.10"
  }
}
