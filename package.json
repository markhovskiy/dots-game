{
  "name": "dots-game",
  "version": "0.0.1",
  "description": "html5 version of a classic paper-based game",
  "main": "src/app.js",
  "scripts": {
    "lint": "eslint ./src/",
    "test": "mocha --compilers js:./src/test/_compiler.js --require ./src/test/_setup.js --reporter spec ./src/test",
    "clean": "rm -rf dist/*",
    "prebuild": "yarn run clean && yarn run lint && yarn run test",
    "prebuild:dev": "yarn prebuild",
    "prebuild:prod": "yarn prebuild",
    "run:dev": "export NODE_ENV=development PUBLIC_PATH=/ && webpack-dashboard webpack-dev-server",
    "build:dev": "export NODE_ENV=development PUBLIC_PATH=/ && webpack --progress --bail",
    "build:prod": "export NODE_ENV=production PUBLIC_PATH=https://oleksmarkh.github.io/dots-game/ && webpack --progress --bail"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/oleksmarkh/dots-game.git"
  },
  "author": "Oleksii Markhovskyi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oleksmarkh/dots-game/issues"
  },
  "homepage": "https://github.com/oleksmarkh/dots-game",
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.0",
    "css-loader": "^0.28.4",
    "eslint": "^4.3.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.7.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "html-webpack-plugin": "^2.29.0",
    "mocha": "^3.4.2",
    "sinon": "^2.4.1",
    "style-loader": "^0.18.2",
    "webpack": "^3.8.1",
    "webpack-dashboard": "^1.0.2",
    "webpack-dev-server": "^2.9.5"
  },
  "dependencies": {
    "hidpi-canvas": "^1.0.10"
  }
}
